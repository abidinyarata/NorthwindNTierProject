
@{
    ViewData["Title"] = "Product Async";
}



<div class="container">
    @*  @await Component.InvokeAsync("CategoryList")*@
    <vc:category-list tool-tip="navbar"></vc:category-list>
</div>

<hr />

<div class="container pt-5">
    <div class="row">
        <div class="col-3">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Product</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">CategoryId</label>
                            <vc:category-list tool-tip="comboBox"></vc:category-list>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">ProductName</label>
                            <input class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">UnitPrice</label>
                            <input class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">UnitsInStock</label>
                            <input class="form-control">
                        </div>
                        @if (ViewData["Message"] != null)
                        {
                            <div class=" alert-danger mb-3">
                                <span>@ViewData["Message"]</span>
                            </div>

                        }
                        <div class="mb-3">
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Add Product</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-footer">

                </div>
            </div>
        </div>
        <div class="col-9">
      
        </div>
    </div>
</div>

@section Scripts{ 
    <script>

    </script>
}