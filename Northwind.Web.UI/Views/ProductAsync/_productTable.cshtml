@model List<ListProductVM>

<div class="card">
    <div class="card-header blog-header text-center ">
        <h3>
            Product List
        </h3>

    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Unit Price</th>
                    <th>Units In Stock</th>
                    <th>
                        <div class="d-grid gap-2 col-10 mx-auto">
                            <div class="btn-group">
                                <a asp-action="Add" asp-controller="Product" class="btn btn-outline-success">Add Product</a>
                                <a asp-action="Index" asp-controller="Product" asp-route-id="0" class="btn btn-outline-success">Get All Products</a>
                            </div>
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (ListProductVM item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.UnitPrice.Value.ToString("#.##") €</td>
                        <td>@item.UnitsInStock</td>
                        <td>
                            <div class="d-grid gap-2 col-10 mx-auto">
                                <div class="btn-group">
                                    <a class=" btn btn-outline-primary">Update</a>
                                    <button class="btn btn-outline-danger">Delete</button>
                                </div>

                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer text-center">
        Northwind
    </div>
</div>