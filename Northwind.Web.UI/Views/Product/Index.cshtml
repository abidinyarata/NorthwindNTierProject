@model List<ListProductVM>

@{
    ViewData["Title"] = "Product";

}

<div class="container">
    @*@await Component.InvokeAsync("CategoryList")*@
    <vc:category-list tool-tip="navbar"></vc:category-list>
</div>

<hr />

<div class="container pt-5">

    <div class="card">
        <div class="card-header blog-header text-center">
            <h2>
                Product List
            </h2>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Unit Price</th>
                        <th>Unit in Stock</th>
                        <th>
                            <div class="d-grid gap-2 col-6 mx-auto">
                                <div class="btn-group">
                                    <a asp-action="Add" asp-controller="Product" class="btn btn-outline-success">Add Product</a>
                                    <a asp-action="Index" asp-controller="Product" asp-route-id="0" class="btn btn-outline-success">Get All Products</a>
                                </div>
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.UnitPrice.Value.ToString("#.##") €</td>
                            <td>@item.UnitsInStock</td>
                            <td>
                                <div class="d-grid gap-2 col-6 mx-auto">
                                    <div class="btn-group">
                                        <a asp-action="Update" asp-controller="Product" asp-route-id="@item.ProductId" type="button" class="btn btn-outline-primary">Update</a>
                                        <a type="button" class="btn btn-outline-danger">Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            Northwind
        </div>
    </div>
</div>